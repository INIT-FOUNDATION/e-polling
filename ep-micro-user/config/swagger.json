{
  "swagger": "2.0",
  "info": {
    "title": "ep-micro-user",
    "description": "API Swagger for ep-micro-user",
    "version": "1.0.0"
  },
  "host": "localhost:9003",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/api/v1/user/admin/updateProfilePic": {
      "post": {
        "tags": [
          "Admin"
        ],
        "summary": "Update Profile Pic",
        "description": "Endpoint to Update Profile Pic",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "type": "string",
            "description": "Bearer token for authentication"
          },
          {
            "name": "file",
            "in": "formData",
            "required": true,
            "type": "file",
            "description": "Profile picture file to upload"
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/user/admin/updateProfile": {
      "post": {
        "tags": [
          "Admin"
        ],
        "summary": "Update Profile",
        "description": "Endpoint to User Profile",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "type": "string",
            "description": "Bearer token for authentication"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "first_name": {
                  "type": "string",
                  "example": "Narsima"
                },
                "last_name": {
                  "type": "string",
                  "example": "Chilkuri"
                },
                "email_id": {
                  "type": "string",
                  "example": "narsimachilkuri237@gmail.com"
                },
                "dob": {
                  "type": "string",
                  "example": "1997-08-16"
                }
              }
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/user/admin/loggedUserInfo": {
      "get": {
        "tags": [
          "Admin"
        ],
        "summary": "Get Logged In User Info",
        "description": "Endpoint to retrieve information about the currently logged-in user.",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "type": "string",
            "description": "Bearer token for authentication"
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/user/health": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Health Check API",
        "description": "Endpoint for health check of User Micro Service",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    }
  }
}